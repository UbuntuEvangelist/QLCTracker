{
  "name": "smsbilling",
  "version": "1.0.1",
  "main": "main.js",
  "author": "QLC Chain Team <admin@qlink.mobi>",
  "scripts": {
    "postinstall": "node patch.js",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "sms:dev": "ng serve",
    "sms:dev-testnet": "ng serve --configuration=testnet",
    "sms:build-testnet": "ng build --configuration=testnet",
    "sms:build": "ng build --configuration=production",
    "sms:build-desktop": "ng build --configuration=desktop --base-href ./",
    "sms:build-desktop-testnet": "ng build --configuration=desktop-testnet --base-href ./",
    "desktop:dev": "electron main.js",
    "desktop:dev-testnet": "electron main_testnet.js",
    "desktop:local": "electron-builder",
    "desktop:devLocal": "electron-builder -c.compression=store",
    "desktop:full": "electron-builder -wml --x64"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^8.1.0",
    "@angular/common": "^8.2.0",
    "@angular/compiler": "^8.2.0",
    "@angular/core": "^8.2.0",
    "@angular/forms": "^8.2.0",
    "@angular/platform-browser": "^8.2.0",
    "@angular/platform-browser-dynamic": "^8.2.0",
    "@angular/router": "^8.2.0",
    "@cityofzion/neon-js": "^4.7.0",
    "@ngx-translate/core": "^11.0.1",
    "@ngx-translate/http-loader": "^4.0.0",
    "@types/jest": "^24.0.17",
    "@types/jquery": "^3.3.31",
    "@types/mocha": "^5.2.7",
    "bignumber.js": "^8.1.1",
    "bip39": "^3.0.2",
    "blakejs": "^1.1.0",
    "bootstrap": "^4.3.1",
    "chmod-plus": "0.0.3",
    "core-js": "^2.6.9",
    "cross-spawn-with-kill": "^1.0.0",
    "crypto-js": "^3.1.9-1",
    "electron-log": "^3.0.7",
    "electron-updater": "^4.1.2",
    "electron-util": "^0.11.0",
    "fs-extra": "^8.1.0",
    "jquery": "^3.4.1",
    "js-base64": "^2.5.1",
    "jsonrpc-lite": "^2.0.7",
    "ngx-bootstrap": "^4.3.0",
    "ngx-clipboard": "^12.2.0",
    "ngx-device-detector": "^1.3.9",
    "ngx-logger": "^3.4.6",
    "particles.js": "^2.0.0",
    "qlc.js": "0.0.7",
    "qrcode": "^1.4.1",
    "rxjs": "~6.5.2",
    "signal-exit": "^3.0.2",
    "to-executable-name": "^2.0.0",
    "tslib": "^1.10.0",
    "uuid": "^3.3.2",
    "xhr2": "^0.1.4",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.800.6",
    "@angular/cli": "^8.2.0",
    "@angular/compiler-cli": "^8.2.0",
    "@angular/language-service": "^8.2.0",
    "@types/jasmine": "^3.3.13",
    "@types/jasminewd2": "~2.0.6",
    "@types/node": "^12.0.10",
    "codelyzer": "^5.1.0",
    "download": "^7.1.0",
    "electron": "^5.0.9",
    "electron-builder": "^20.44.4",
    "electron-is-dev": "^1.1.0",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^4.2.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^2.1.0",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "popper.js": "^1.15.0",
    "protractor": "~5.4.2",
    "tar": "^4.4.10",
    "ts-node": "^8.3.0",
    "tslint": "~5.16.0",
    "typescript": "3.4.5"
  },
  "build": {
    "appId": "org.qlcchain.smsbilling",
    "buildVersion": "1.0.1",
    "productName": "SMSBilling",
    "asar": true,
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "main.js"
    ],
    "directories": {
      "output": "dist-desktop",
      "app": "./"
    },
    "dmg": {
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 410,
          "y": 230,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 230,
          "type": "file"
        }
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "type": "distribution",
      "extraResources": [
        {
          "from": "./extra/darwin/x64/",
          "to": "./",
          "filter": [
            "**/*"
          ]
        },
        {
          "from": "./extra/config.json",
          "to": "./"
        }
      ],
      "binaries": [
        "./dist-desktop/mac/smsBilling.app/Contents/Resources/gqlc"
      ],
      "category": "public.app-category.finance"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "extraResources": [
        {
          "from": "./extra/win32/${arch}",
          "to": "./",
          "filter": [
            "**/*"
          ]
        },
        {
          "from": "./extra/config.json",
          "to": "./",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "desktop": {
        "Categories": "P2P;Finance;Security"
      },
      "extraResources": [
        {
          "from": "./extra/linux/x64/",
          "to": "./",
          "filter": [
            "**/*"
          ]
        },
        {
          "from": "./extra/config.json",
          "to": "./",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "qlcchain",
        "repo": "sms-billing"
      }
    ]
  }
}
